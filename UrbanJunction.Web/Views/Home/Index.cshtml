@{
    ViewData["Title"] = "Urban Junction - Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Urban Junction</h1>
        <p class="lead">Where passions collide — music, fashion, art, and more.</p>
    </div>

    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title">🎵 Music</h3>
                    <p class="card-text">Share, discover, and discuss all things music.</p>
                    <a href="/Topics/Music" class="btn btn-primary">Explore Music</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title">👗 Fashion</h3>
                    <p class="card-text">Style tips, streetwear, and the latest trends.</p>
                    <a href="/Topics/Fashion" class="btn btn-primary">Explore Fashion</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title">🎨 Art</h3>
                    <p class="card-text">From graffiti to galleries—share your visuals.</p>
                    <a href="/Topics/Art" class="btn btn-primary">Explore Art</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row g-4 text-center">
        <div class="col-md-6">
            <div class="card bg-light h-100">
                <div class="card-body">
                    <h4 class="card-title">💬 Live Q&A</h4>
                    <p class="card-text">Coming soon!</p>
                    <a href="/QnA" class="btn btn-outline-secondary">Join Q&A</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-light h-100">
                <div class="card-body">
                    <h4 class="card-title">📞 Support</h4>
                    <p class="card-text">Need help? Reach out to our team.</p>
                    <a href="/Support" class="btn btn-outline-secondary">Get Support</a>
                </div>
            </div>
        </div>
    </div>
</div>
