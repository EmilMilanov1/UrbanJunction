@model PostFormViewModel

@{
    ViewData["Title"] = "Edit Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Post</h2>

<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" rows="6" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubcategoryId" class="form-label">Category</label>
        <select asp-for="SubcategoryId" class="form-select" asp-items="Model.Subcategories"></select>
        <span asp-validation-for="SubcategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a onclick="history.back()" class="btn btn-outline-secondary mt-3">← Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
